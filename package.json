{
    "name": "joust",
    "version": "1.0.0",
    "main": "index.js",
    "author": "Guy Balaam <guybal@amazon.com>",
    "license": "MIT",
    "scripts": {
        "start": "nodemon",
        "build": "yarn clean:dist && yarn copy:client && yarn copy:server",
        "clean:dist": "mkdir -p dist && rm -rf dist/*",
        "copy:client": "mkdir -p dist/lib && cp -R src/client/* dist/lib",
        "copy:server": "mkdir -p dist/src/server && cp -R src/server dist/src"
    },
    "dependencies": {
        "express": "^4.17.1",
        "socket.io": "^2.2.0"
    },
    "devDependencies": {
        "nodemon": "^1.19.1"
    }
}